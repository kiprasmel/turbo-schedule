{
	"extends": "../tsconfig-base.json",
	"references": [
		{
			"path": "../common"
		}, //
		{
			"path": "../use-fetched-state"
		}
	],
	"compilerOptions": {
		"composite": false /** override the included tsconfig */,
		"baseUrl": "src",
		"outDir": "build",
		"module": "esnext",
		"target": "es5",
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"types": ["jest"]
	},
	"exclude": [
		"node_modules", //
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts",
		"src/test-utils.tsx"
	],
	"include": ["src"]
}
