{
	"extends": "../tsconfig-base.json",
	"references": [
		{
			"path": "../common"
		}, //
		{
			"path": "../scraper"
		}
	],
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"dom", //
			"es6",
			"es2017",
			"esnext.asynciterable"
		],
		"noEmit": false,
		"sourceMap": true,
		/** we currently do NOT use neither `rootDir` nor `rootDirs` here */
		"outDir": "./dist",
		"moduleResolution": "node",
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"baseUrl": "."
	},
	"exclude": [
		"node_modules", //
		"dist",
		"test" /** tests are ran throught ts & don't need compilation */
	]
	// "include": [
	// 	"./src/**/*.tsx", //
	// 	"./src/**/*.ts"
	// ]
}
