{
	"name": "@turbo-schedule/server",
	"version": "1.5.0",
	"description": "",
	"main": "dist/src/server.js",
	"typings": "dist/src/server.d.ts",
	"author": "Kipras Melnikovas <dev@kipras.org> (https://kipras.org)",
	"license": "",
	"scripts": {
		"start": "yarn dev",
		"test": "yarn test:dev",
		"build": "yarn build:ts && yarn build:content && yarn build:docs",
		"serve": "cross-env NODE_ENV=production node dist/script/start-server.js",
		"-----": "-----",
		"watch:ts": "tsc -b -w",
		"watch:server": "ts-node-dev script/start-server.ts",
		"dev": "concurrently --raw --kill-others --names \"0: tsc,1: server\" \"yarn watch:ts\" \"yarn watch:server\"",
		"build:ts": "tsc -b",
		"build:content": "node ./dist/script/scrape-content.js     # depends on `build:ts`",
		"build:docs": "ts-node-dev ./script/generate-openapi-docs.ts && mkdir -p ./dist/generated/ && cp ./generated/openAPI.json ./dist/generated/openAPI.json",
		"test:dev": "cross-env NODE_ENV=test PORT=5069 jest --config=./test/jest.config.js",
		"test:prod": "cp -f ./test/jest.config.js ./dist/test/ && cross-env NODE_ENV=production PORT=5069 jest --config ./dist/test/jest.config.js  # depends on `build:ts`"
	},
	"dependencies": {
		"@turbo-schedule/common": "^1.5.0",
		"@turbo-schedule/scraper": "^1.5.0",
		"@types/cors": "^2.8.6",
		"@types/cron": "^1.7.1",
		"@types/express": "^4.17.1",
		"@types/fs-extra": "^8.0.0",
		"@types/helmet": "^0.0.44",
		"@types/morgan": "^1.7.37",
		"@types/node": "^12.7.4",
		"@types/node-fetch": "^2.5.0",
		"cors": "^2.8.5",
		"cron": "^1.7.2",
		"cross-env": "^6.0.3",
		"express": "^4.17.1",
		"express-oas-generator": "^1.0.10",
		"fs-extra": "^8.1.0",
		"helmet": "^3.20.1",
		"morgan": "^1.9.1",
		"node-fetch": "^2.6.0",
		"openapi-types": "^1.3.5",
		"redoc": "^2.0.0-rc.16",
		"rotating-file-stream": "^1.4.6"
	},
	"devDependencies": {
		"@types/jest": "^24.0.19",
		"@types/supertest": "^2.0.8",
		"concurrently": "^5.0.0",
		"cross-env": "^6.0.3",
		"jest": "^24.9.0",
		"supertest": "^4.0.2",
		"ts-jest": "^24.1.0",
		"ts-node-dev": "^1.0.0-pre.42",
		"typescript": "^3.8.0-dev.20191030"
	},
	"resolutions": {
		"express-oas-generator/swagger-ui-express": "^4.1.2"
	},
	"keywords": []
}
