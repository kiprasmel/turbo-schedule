{
	"compilerOptions": {
		"composite": true /** project references */,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmit": false /** I found this to fix some errors */,
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"skipLibCheck": true,
		"lib": [
			"dom", //
			"es6",
			"es2020" /** [].flatMap() */,
			"esnext.asynciterable"
		],
		"outDir": "dist",
		"moduleResolution": "node",
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"baseUrl": "."
	},
	"exclude": [
		"node_modules", //
		"dist"
	]
	//   "include": [
	//     "./src/**/*.tsx", //
	//     "./src/**/*.ts"
	//   ]
	// "references": [
	// 	{ "path": "common" }, //
	// 	{ "path": "scraper" },
	// 	{ "path": "server" },
	// 	{ "path": "client" }
	// ]
}
