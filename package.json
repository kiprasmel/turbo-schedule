{
	"name": "turbo-schedule",
	"private": true,
	"version": "0.1.0",
	"workspaces": {
		"packages": [
			"common",
			"scraper",
			"server",
			"client"
		]
	},
	"scripts": {
		"start": "yarn dev    # depends on `setup`",
		"setup": "yarn install && yarn build",
		"purge": "yarn purge:build && yarn purge:modules && echo \"Do NOT forget to re-setup: \n\nyarn setup\n\"",
		"reinstall": "yarn purge && yarn setup",
		"lerna": "lerna",
		"watch": "tsc -b -w",
		"purge:build": "rimraf client/build && rimraf './*(server|scraper|common)/dist/' && rimraf ./dist/",
		"purge:modules": "rimraf ./*/node_modules/ && rimraf ./node_modules/",
		"dev": "concurrently --kill-others --names \"0: tsc,1: server,2: client\" \"yarn watch\" \"yarn dev:server\"    # depends on `setup`",
		"test": "lerna run test",
		"build:ts:normal": "tsc -b",
		"build:ts:fallback": "npx --package typescript@beta tsc -b && echo \"\nUsed build:ts:fallback!\n\"",
		"build:ts": "yarn build:ts:normal || yarn build:ts:fallback",
		"build:client": "yarn --cwd client build",
		"build": "yarn run build:ts && yarn build:client && yarn --cwd server build",
		"serve": "yarn --cwd server run serve",
		"docker:build": "docker build -t kipras/turbo-schedule:latest .",
		"docker:login": "echo \"$DOCKERHUB_PASSWORD\" | docker login --username \"$DOCKERHUB_USERNAME\" --password-stdin",
		"docker:push": "docker push kipras/turbo-schedule:latest",
		"docker:deploy": "yarn docker:build && yarn docker:login && yarn docker:push",
		"postinstall": "patch-package"
	},
	"devDependencies": {
		"concurrently": "^4.1.2",
		"lerna": "^3.16.4",
		"patch-package": "^6.2.0",
		"postinstall-postinstall": "^2.0.0",
		"rimraf": "^3.0.0"
	},
	"dependencies": {
		"typescript": "^3.7.0-beta"
	}
}
