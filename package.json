{
	"name": "turbo-schedule",
	"private": true,
	"version": "0.1.0",
	"workspaces": {
		"packages": [
			"common",
			"scraper",
			"server",
			"client"
		]
	},
	"scripts": {
		"postinstall": "patch-package",
		"setup": "yarn install && yarn build",
		"start": "yarn dev  # depends on `setup`",
		"test": "lerna run test",
		"build": "yarn build:all",
		"serve": "yarn --cwd ./server/ serve",
		"docker": "yarn docker:deploy",
		"purge": "yarn purge:all",
		"re-setup": "yarn purge && yarn setup",
		"-----": "-----",
		"watch:ts": "tsc -b -w",
		"watch:server": "yarn --cwd ./server/ watch:server",
		"watch:client": "yarn --cwd ./client start",
		"dev": "concurrently --raw --kill-others --names \"0: tsc,1: server,2: client\" \"yarn watch:ts\" \"yarn watch:server\" \"yarn watch:client\"",
		"build:ts:normal": "tsc -b",
		"build:ts:fallback": "npx --package typescript@beta tsc -b && echo \"\nUsed build:ts:fallback!\n\"",
		"build:ts": "yarn build:ts:normal || yarn build:ts:fallback",
		"build:client": "yarn --cwd ./client/ build",
		"build:server": "yarn --cwd ./server/ build",
		"build:all": "yarn build:ts && yarn build:client && yarn build:server",
		"docker:build": "docker build -t kipras/turbo-schedule:latest .",
		"docker:login": "echo \"$DOCKERHUB_PASSWORD\" | docker login --username \"$DOCKERHUB_USERNAME\" --password-stdin",
		"docker:push": "docker push kipras/turbo-schedule:latest",
		"docker:deploy": "yarn docker:build && yarn docker:login && yarn docker:push",
		"purge:build": "rimraf './client/build' && rimraf './*(server|scraper|common)/dist/' && rimraf './dist/'",
		"purge:modules": "rimraf './*/node_modules/' && rimraf './node_modules/'",
		"purge:all": "yarn purge:build && yarn purge:modules && echo \"Do NOT forget to re-setup: \n\nyarn setup\n\""
	},
	"dependencies": {},
	"devDependencies": {
		"concurrently": "^4.1.2",
		"lerna": "^3.16.4",
		"patch-package": "^6.2.0",
		"postinstall-postinstall": "^2.0.0",
		"rimraf": "^3.0.0",
		"typescript": "^3.8.0-dev.20191030"
	}
}
